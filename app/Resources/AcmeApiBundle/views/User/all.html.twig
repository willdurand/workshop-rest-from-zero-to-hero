{% extends '::layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table users">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>First Name</td>
                        <td>Last Name</td>
                    </tr>
                <thead>
                <tbody>
                {% for user in pager %}
                    <tr class="user">
                        <td><a href="{{ path('acme_api_user_get', { 'id': user.id }) }}">{{ user.id }}</a></td>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="pagerfanta">
        {{ pagerfanta(pager, 'twitter_bootstrap3') }}
    </div>
</div>
{% endblock content %}
